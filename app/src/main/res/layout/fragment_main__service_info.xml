<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".screens.main.serviceinfo.ServiceInfoFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main__service_info__tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_main__user_services__new_service__etTitle__marginTop"
        android:hint="@string/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main__service_info__tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_main__user_services__new_service__etDescription__marginTop"
        android:hint="@string/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main__service_info__tvTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main__service_info__type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_main__user_services__new_service__rg__marginTop"
        android:hint="@string/fragment_main__service_info__type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main__service_info__tvDescription" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main__service_info__spnCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_main__user_services__new_service__spnCurrency__marginTop"
        android:hint="@string/currency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main__service_info__type" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main__service_info__etPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_main__user_services__new_service__etPrice__marginTop"
        android:hint="@string/price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_main__service_info__spnCurrency" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main__service_info__spnGeography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_main__user_services__new_service__spnGeography__marginTop"
        android:hint="@string/fragment_main__profile__geography"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main__service_info__etPrice" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main__service_info__etTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:layout_marginTop="@dimen/fragment_main__user_services__new_service__etTags__marginTop"
        android:hint="@string/tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main__service_info__spnGeography" />

</androidx.constraintlayout.widget.ConstraintLayout>
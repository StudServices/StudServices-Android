<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".views.main.filters.FiltersFragment">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/fragment_main__filters__checkbox_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_main__filters__checkbox_study"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/fragment_main__filters__checkbox_dorm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_main__filters__checkbox_dorm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main__filters__checkbox_study" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment_main__filters__dorm_spn_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_main__filters__dorm_spinner_desc"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_main__filters__checkbox_dorm" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/fragment_main__filters__spnGeography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:entries="@array/dormsList"
        app:layout_constraintStart_toEndOf="@id/fragment_main__filters__dorm_spn_desc"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main__filters__checkbox_dorm" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_main__filters__tags_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main__filters__spnGeography" />

</androidx.constraintlayout.widget.ConstraintLayout>